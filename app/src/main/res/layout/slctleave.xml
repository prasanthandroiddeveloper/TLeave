    <TextView
        android:id="@+id/fulldayTV"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:text="Full day"
        android:gravity="center"
        android:textColor="#444242"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/btn_day"/>

    <TextView
        android:id="@+id/halfdayTV"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/fulldayTV"
        android:layout_margin="5dp"
        android:text="Half day"
        android:gravity="center"
        android:textColor="#444242"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/btn_day"/>

    <TextView
        android:id="@+id/woffTV"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/halfdayTV"
        android:layout_margin="5dp"
        android:text="Week off"
        android:gravity="center"
        android:textColor="#444242"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/btn_day"/>


    <TextView
        android:id="@+id/subTV"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:text="Submit"
        android:gravity="center"
        android:layout_below="@id/woffTV"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/btn_done"/>




</RelativeLayout>