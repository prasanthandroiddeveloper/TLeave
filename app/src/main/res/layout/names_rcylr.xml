<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/RnameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#bb377d"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:id="@+id/RdayscntTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#017AC3"
            android:fontFamily="@font/poppins_semibold"/>
        <Button
            android:id="@+id/wrkBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:background="@drawable/btn_dboard"
            android:text="Work"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/spnLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/btn_plain"
            android:layout_margin="20dp">

            <Spinner
                android:id="@+id/wrkngspnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

            </Spinner>

        </RelativeLayout>
        <Button
            android:id="@+id/doneBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:background="@drawable/btn_dboard"
            android:text="@string/submit"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>