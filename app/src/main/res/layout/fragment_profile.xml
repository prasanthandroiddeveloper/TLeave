<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFrag">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="3dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">



            <EditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name as per Adhaar"
                android:background="@drawable/btn_plain"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



                <TextView


                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingStart="35dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView


                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="35sp"
                    android:layout_gravity="bottom"
                    android:gravity="center|bottom"
                    />

                <TextView


                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Month"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="35sp"
                    android:layout_gravity="bottom"
                    android:gravity="center|bottom"
                    />










            </LinearLayout>











            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



                <TextView


                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Date of Birth"
                    android:paddingStart="35dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />



                <Spinner

                    android:id="@+id/dtSPNR"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" />


                <Spinner

                    android:id="@+id/mntSPNR"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" />



            </LinearLayout>



            <EditText

                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:hint="Company Email ID"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#E66F06"
                android:background="@drawable/btn_plain" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText

                    android:id="@+id/phnET"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Permanent No"
                    android:maxLength="10"
                    android:inputType="number"
                    android:background="@drawable/btn_plain"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />



                <EditText

                    android:id="@+id/phnsET"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Alternate No"
                    android:maxLength="10"
                    android:inputType="number"
                    android:background="@drawable/btn_plain"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

            </LinearLayout>

            <EditText

                android:id="@+id/paET"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:hint="Permanent Address"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_plain"
                android:layout_gravity="center"
                android:gravity="center"
                />



            <CheckBox
                android:id="@+id/adrsCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temporary Address same as Above "/>


            <EditText

                android:id="@+id/taET"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:hint="Temporary Address"
                android:background="@drawable/btn_plain"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:layout_marginTop="5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:inputType="text" />



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">


                <TextView

                    android:id="@+id/dojTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Date of Joining"
                    android:background="@drawable/btn_plain"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />



                <Button
                    android:id="@+id/sdateBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/whiteborder2"
                    android:hint="Select"
                    android:textColor="#000"
                    android:paddingStart="20dp"
                    android:paddingEnd="5dp"
                    android:drawableLeft="@drawable/cal24"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:drawablePadding="-15dp"
                    android:drawableStart="@drawable/cal24" />

            </LinearLayout>


            <Button

                android:id="@+id/subBTN"
                android:layout_width="100dp"
                android:layout_marginTop="15dp"
                android:background="#1A237E"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text="ADD"
                android:layout_gravity="center"
                android:gravity="center" />


            <Button

                android:id="@+id/birth"
                android:layout_width="100dp"
                android:layout_marginTop="15dp"
                android:background="#9FD4EE"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text="Birthday"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>